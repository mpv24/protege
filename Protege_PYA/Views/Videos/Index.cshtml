@model IEnumerable<Protege_PYA.Models.Video>

@{
    ViewData["Title"] = "Videos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="display-4 text-center mt-4">VIDEOS</h4>
<hr class="my-4">


<p class="text-center">
    <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill px-4 py-2" style="background: linear-gradient(90deg, #4b6cb7 0%, #182848 100%);">
        <i class="fas fa-user-plus"></i> Crear Nuevo Video
    </a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <iframe class="card-img-top" src="@item.Url" frameborder="0" allowfullscreen style="width:100%; height:300px;"></iframe>
                <div class="card-body">
                    <h6 class="card-title">@item.Titulo</h6>
                    <p class="card-text">
                        Fecha subida: @(item.FechaSubida.HasValue ? item.FechaSubida.Value.ToShortDateString() : "Fecha no disponible")
                    </p>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm rounded-pill">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm rounded-pill">
                            <i class="fas fa-trash-alt"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>