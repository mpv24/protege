@model Protege_PYA.Models.Video

@{
    ViewData["Title"] = "Eliminar Video";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header text-center" style="background-color: #d9534f;">
                    <h4 class="text-white">Eliminar Video</h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="text-center text-danger">¿Estás seguro de que quieres eliminar este video?</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">Título</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Titulo)</dd>

                        <dt class="col-sm-4 font-weight-bold">URL</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Url)</dd>

                        <dt class="col-sm-4 font-weight-bold">Fecha Subida</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaSubida)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                            <button type="submit" class="btn btn-danger rounded-pill px-4">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 ms-2">
                                <i class="fas fa-arrow-left"></i> Volver a la lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
