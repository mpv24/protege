<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Protege_PYA</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/open-iconic/1.1.1/font/css/open-iconic-bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Protege_PYA.styles.css" asp-append-version="true" />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js'></script>
</head>
<body>
    <!-- Encabezado -->
    <div class="header">
        <div class="logo">
            <img src="@Url.Content("~/img/logo.png")" alt="Logo Protege">
        </div>
        <nav>
            <a href="@Url.Action("Inicio", "Home")">INICIO</a>
            <div class="dropdown-menu-container">
                <a href="#" class="dropdown-toggle">RECURSOS</a>
                <div class="dropdown-menu">
                    <a href="@Url.Action("Index", "Videos")">Videos</a>
                    <a href="@Url.Action("Index", "Actividades")">Actividades</a>
                    <a href="@Url.Action("Index", "HistoriasCuentos")">Historias/Cuentos</a>
                    <a href="@Url.Action("Index", "Archivos")">Archivos</a>
                    <a href="@Url.Action("Index", "Charlas")">Charlas</a>
                </div>
            </div>
            <a href="@Url.Action("Chat", "Mensajes")">FORO</a>
            <a href="@Url.Action("Index", "Profesionales")">PROFESIONALES</a>
            <a href="@Url.Action("Calendar", "Home")">CALENDARIO</a>
            <a href="@Url.Action("Index", "Eventos")">EVENTO</a>
        </nav>
        <div class="profile-menu">
            <div class="profile-icon">
                <img src="@Url.Content("~/img/user.png")" alt="User Icon">
            </div>
            <div class="dropdown-menu">
                <a href="@Url.Action("Index", "Usuario")">Perfil</a>
                <form asp-controller="Autentication" asp-action="Salir" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link">Cerrar Sesión</button>
                </form>
            </div>
        </div>
    </div>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2024 - Protege_P - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>