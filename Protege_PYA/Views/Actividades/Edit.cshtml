@model Protege_PYA.Models.Actividade

@{
    ViewData["Title"] = "Editar Actividad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0" style="box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                <div class="card-header text-center" style="background-color: #003366;">
                    <h4 class="text-white">Editar Actividad</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-4">
                            <label asp-for="Nombre" class="form-label font-weight-bold"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la actividad" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Descripcion" class="form-label font-weight-bold"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Ingrese la descripción"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Tipo" class="form-label font-weight-bold"></label>
                            <input asp-for="Tipo" class="form-control" placeholder="Ingrese el tipo de actividad" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Url" class="form-label font-weight-bold"></label>
                            <input asp-for="Url" class="form-control" placeholder="Ingrese la URL" />
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary rounded-pill py-2" style="background-color: #003366;">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill py-2">
                                <i class="fas fa-arrow-left"></i> Volver a la lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
