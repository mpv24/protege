@model Protege_PYA.Models.Actividade

@{
    ViewData["Title"] = "Crear Actividad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Crear Actividad</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Campo Nombre -->
                        <div class="form-group mb-4">
                            <label asp-for="Nombre" class="form-label font-weight-bold"></label>
                            <input asp-for="Nombre" class="form-control rounded-pill" placeholder="Ingrese el nombre de la actividad" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Campo Descripción -->
                        <div class="form-group mb-4">
                            <label asp-for="Descripcion" class="form-label font-weight-bold"></label>
                            <textarea asp-for="Descripcion" class="form-control rounded-pill" placeholder="Ingrese una breve descripción"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <!-- Campo Tipo -->
                        <div class="form-group mb-4">
                            <label asp-for="Tipo" class="form-label font-weight-bold"></label>
                            <input asp-for="Tipo" class="form-control rounded-pill" placeholder="Ingrese el tipo de actividad" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>

                        <!-- Campo URL -->
                        <div class="form-group mb-4">
                            <label asp-for="Url" class="form-label font-weight-bold"></label>
                            <input asp-for="Url" class="form-control rounded-pill" placeholder="Ingrese la URL de la imagen o video" />
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>

                        <!-- Botones de acción -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary rounded-pill py-2">
                                <i class="fas fa-save"></i> Guardar Actividad
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill py-2">
                                <i class="fas fa-arrow-left"></i> Volver a la lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
