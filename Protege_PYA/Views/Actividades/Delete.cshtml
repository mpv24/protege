@model Protege_PYA.Models.Actividade

@{
    ViewData["Title"] = "Eliminar Actividad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h2 class="mb-0">Eliminar Actividad</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-center mb-4">¿Estás seguro de que deseas eliminar esta actividad?</h4>
                    <div class="mb-4">
                        <h5 class="text-muted">Detalles de la Actividad:</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Nombre:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                            <dt class="col-sm-4">Descripción:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                            <dt class="col-sm-4">Tipo:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Tipo)</dd>

                            <dt class="col-sm-4">URL:</dt>
                            <dd class="col-sm-8"><a href="@Model.Url" target="_blank">@Model.Url</a></dd>
                        </dl>
                    </div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center">
                            <input type="submit" value="Eliminar" class="btn btn-danger btn-lg rounded-pill px-4 py-2" />
                            <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill px-4 py-2 ml-2">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
