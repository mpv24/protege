@model IEnumerable<Protege_PYA.Models.HistoriasCuento>

@{
    ViewData["Title"] = "Historias / Cuentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center display-4 mb-4">HISTORIAS/CUENTOS</h1>
    <hr class="my-4">

    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill px-5 py-2" style="background-color: #003366;">
            <i class="fas fa-plus-circle"></i> Crear Historia o Cuento
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <img src="@item.Imagen" alt="@item.Titulo" class="card-img-top img-fluid" style="height: 300px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title font-bold">@item.Titulo</h5>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link text-red-500">
                            <i class="fas fa-eye fa-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
