@model Protege_PYA.Models.HistoriasCuento

@{
    ViewData["Title"] = "Crear Historia/Cuento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h2 class="text-primary font-weight-bold mb-4">Crear Historia o Cuento</h2>

            <form asp-action="Create" method="post" enctype="multipart/form-data" class="shadow-lg p-4 bg-white rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Titulo -->
                <div class="form-group mb-4">
                    <label asp-for="Titulo" class="form-label font-weight-bold"></label>
                    <input asp-for="Titulo" class="form-control rounded-pill" placeholder="Ingrese el título de la historia/cuento" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <!-- Autor -->
                <div class="form-group mb-4">
                    <label asp-for="Autor" class="form-label font-weight-bold"></label>
                    <input asp-for="Autor" class="form-control rounded-pill" placeholder="Ingrese el nombre del autor" />
                    <span asp-validation-for="Autor" class="text-danger"></span>
                </div>

                <!-- Descripción -->
                <div class="form-group mb-4">
                    <label asp-for="Descripcion" class="form-label font-weight-bold"></label>
                    <textarea asp-for="Descripcion" class="form-control rounded" rows="4" placeholder="Escriba una breve descripción"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Imagen -->
                <div class="form-group mb-4">
                    <label asp-for="Imagen" class="form-label font-weight-bold"></label>
                    <input asp-for="Imagen" type="file" class="form-control rounded-pill" />
                    <span asp-validation-for="Imagen" class="text-danger"></span>
                </div>

                <!-- URL -->
                <div class="form-group mb-4">
                    <label asp-for="Url" class="form-label font-weight-bold"></label>
                    <input asp-for="Url" class="form-control rounded-pill" placeholder="Ingrese la URL de la historia/cuento" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>

                <!-- Botón de Enviar -->
                <div class="form-group text-center">
                    <input type="submit" value="Crear" class="btn btn-primary rounded-pill px-5" />
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Volver al listado</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
